<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.IUser">

    <select id="getUser" parameterType="int"
            resultType="models.User">
        SELECT *
        FROM USER
        WHERE id = #{userId}
    </select>

    <insert id="insertUser" parameterType="models.User">
        INSERT INTO
        USER (name, dept, website, phone)
        values (#{name}, #{dept}, #{website}, #{phone})
    </insert>

    <select id="getUserList" resultType="models.User">
        SELECT * FROM USER
    </select>

    <update id="updateUser" parameterType="models.User">
        UPDATE USER
        SET
        name=
        #{name},
        dept = #{dept},
        website = #{website},
        phone = #{phone}
        WHERE
        id =
        #{id}
    </update>

    <delete id="deleteUser" parameterType="int">
        DELETE FROM USER WHERE id = #{id}
    </delete>

</mapper>